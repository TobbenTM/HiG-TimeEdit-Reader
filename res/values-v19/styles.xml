<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>

        <item name="android:windowBackground">@color/ab_start</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/ab_start</item>
    </style>

    <style name="fitsSysWinTheme">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TimeTableList" parent="android:Widget.Holo.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:background">@color/list_bg</item>
    </style>

</resources>
